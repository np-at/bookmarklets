{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": false,
    "outDir": "./dist",
    "downlevelIteration": false,
    "inlineSourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noEmit": true,
    "rootDir": ".",
    "sourceRoot": ".",
    "skipLibCheck": true,
    "lib": ["dom","es2022"],
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["node_modules", "dist", "\\.*"],
  "include": [],
  "ts-node": {
    "compiler": "typescript",
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "checkJs": false,
      "target": "ES6",
      "lib": ["dom","es2022"],
      "esModuleInterop": true
    }
  }
}
