{
  
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "downlevelIteration": false,

    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
//    "rootDir": ".",
    "sourceRoot": ".",
    "skipLibCheck": true,
    "lib": ["dom","es2022"],
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.web.json"
    }
  ],
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["node_modules", "dist", "\\.*"],
  "include": [],
  "ts-node": {
    "compiler": "typescript",
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "checkJs": false,
      "target": "ES6",
      "lib": ["dom","es2022"],
      "esModuleInterop": true,
      "strict": false
    }
  }
}
