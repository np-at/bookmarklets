{

  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "downlevelIteration": false,
    "composite": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "rootDir": ".",
    "sourceRoot": ".",
    "skipLibCheck": true,
    "lib": ["dom","es2022"],
    "baseUrl": "."
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.web.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],

//  "exclude": ["node_modules", "dist"],
//  "include": ["src"],

  "ts-node": {
    "compiler": "typescript",
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "checkJs": false,
      "target": "ES6",
      "lib": ["dom","es2022"],
      "esModuleInterop": true,
      "strict": false
    }
  }
}
