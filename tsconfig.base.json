{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": false,
    "outDir": "./dist",
    "downlevelIteration": false,
    "inlineSourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "compiler": "typescript",
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "checkJs": false,
      "target": "ES6"
    }
  }
}
