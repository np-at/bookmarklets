{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "lib": [
      "ES2022"
    ],
    "noEmit": false,
    "checkJs": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "files": [
    "./playwright.config.ts",
    "./transformer_scr.mjs"

  ],
  "extends": [
    "./tsconfig.base.json"
  ],
  "include": [
    "./src/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/scripts/web.ts"
  ]
}
