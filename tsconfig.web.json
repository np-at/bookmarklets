{
  "extends": ["./tsconfig.base.json"],

  "compilerOptions": {
    "module": "ES2022",
    "lib": [
      "ES2022",
//      "dom",
      "DOM",
      "dom.iterable",
      "dom"
    ],
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  //  "exclude": [
//    "./**/*.spec.ts",
//    "./**/*.test.ts",
//  ],
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
"node_modules",
    "dist",
    "src/scripts/",
    "tests/**/*",
    "dist/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
  ],
  "include": [
    "./src/marklets/**/*.ts",
    "./aria-api.d.ts",
    "./src/utils/*.ts",
    "./src/utils/**.ts",
   "./src/utils/finder.ts",
    "./tests/**/*.ts",
    "playwright.config.ts"
  ]
}
