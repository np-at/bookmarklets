{
  "extends": [
    "./tsconfig.base.json"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2022",
    "esModuleInterop": true,
    // "downlevelIteration": false,
    "skipLibCheck": true,
    // "strict": true
  },
  //  "exclude": [
  //    "./**/*.spec.ts",
  //    "./**/*.test.ts",
  //  ],
  "typeAcquisition": {
    "enable": true
  },
  "files": ["./src/scripts/web.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "./tests/**/*",
    "./dist/**/*",
    "./**/*.spec.ts",
    "./**/*.test.ts",
  ],
  "include": [
    "./src/Element.d.ts",
    "./src/marklets/*.ts",
    "./aria-api.d.ts",
    "./src/utils/*.ts",
    "./src/utils/**.ts",
    "./src/utils/finder.ts",
    "./tests/**/*.ts"
  ]
}